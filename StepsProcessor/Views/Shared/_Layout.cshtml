<!DOCTYPE html>
<html>
<head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/moment-with-locales.js"></script>
    @*<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">*@
</head>
<body ng-app="StepProcessorApp">
    @*<div class="navbar navbar-header navbar-fixed-top">
            <div class="container">
                <div class="HomeTitle">
                    @Html.ActionLink((string)@ViewBag.App, "Index", "Home", new { area = "" }, new { @class = "" })
                </div>

            </div>
        </div>*@
    <div class="container main">
        <div class="customhead" ng-app="headApp" ng-controller="headCtrl">
            <div ng-include="template"></div>
        </div>
        <div ng-controller="mainCtrl">
            <nav class="navbar navbar-default mnubar">
                <div class="container-fluid">
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="/service">Home <span class="sr-only">(current)</span></a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Servicios <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Permiso de trabajo</a></li>
                                    <li><a href="#">Residencia</a></li>
                                    <li ng-class="{disabled: !authService.authentication.isAuth}"><a href="#">Ciudadania</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Otros</a></li>
                                </ul>
                            </li>
                            <li><a href="/service">Contactenos<span class="sr-only">(current)</span></a></li>
                            <li><a href="/service">FAQ.<span class="sr-only">(current)</span></a></li>
                            <li><a href="/service">Acerca de..<span class="sr-only">(current)</span></a></li>
                        </ul>
                        <div class="navbar-right">
                            <div class="login-text" ng-show="authService.authentication.isAuth">
                                <span>
                                    <h5>Bienvenido: {{authService.authentication.userName}}</h5>
                                    <a href="" ng-click="authService.logOut()">Salir</a>
                                </span>
                            </div>

                            <div class="login-text" ng-show="!authService.authentication.isAuth">
                                <input type="text" ng-model="logData.userName" placeholder="user" />
                                <input type="password" ng-model="logData.password" placeholder="password" />
                                <button class="btn-login" ng-click="login()">Iniciar</button>
                            </div>
                            <div class="options-text navbar-right " ng-show="!authService.authentication.isAuth">
                                <span>Nuevo aqui?<a href="#"> Registrese</a> | <a href="#">Olvide mi contrasena</a></span>
                            </div>
                        </div>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @ViewBag.Foot</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/start")
    @RenderSection("scripts", required: false)
</body>
</html>
