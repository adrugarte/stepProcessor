<!DOCTYPE html>
<html>
<head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Martell Bravo & Co.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="BravoWebApp">
    <div class="header-fixed back_header">
        <div class="col-md-3 col-md-push-1 " style="margin-top:10px;">
            <div><img height="80px;" src="Images/Logo_Trasnparent.png" alt="" /></div>
            <div class="i-s">MARTELL BRAVO & Co.</div>
        </div>
        <div class="col-md-6  col-md-offset-1">
            <div class="col-md-6" style="text-align:right;margin-top:30px;">
                <span class="consulta">Consulta Gratis</span>
            </div>
            <div class="col-md-6">
                <div class="phone">
                    <span>
                        <img width="25px" src="Images/blue phone.png" /> (305) 517-7595
                    </span>
                </div>
                <div class="phone">
                    <span>
                        <img width="25px" src="Images/email.png" /> contact@martellbravo.us
                    </span>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-default" style="margin-bottom:0;">
        <div class="container-fluid mnubar">
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div>
                    <ul class="nav navbar-nav" style="margin:7px 15px 7px 15px;float:none;">
                        <li><a href="/service">Home <span class="sr-only">(current)</span></a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Servicios <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Permiso de trabajo</a></li>
                                <li><a href="#">Residencia</a></li>
                                <li><a href="#">Ciudadania</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Otros</a></li>
                            </ul>
                        </li>
                        <li><a href="/contact">Contactenos<span class="sr-only">(current)</span></a></li>
                        <li><a href="/service">FAQ.<span class="sr-only">(current)</span></a></li>
                        <li><a href="/service">Acerca de..<span class="sr-only">(current)</span></a></li>
                    </ul>
                </div>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div>
        @RenderBody()
    </div>
    <div class="footer">
        &copy; @DateTime.Now.Year - Martell Bravo & Company
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
