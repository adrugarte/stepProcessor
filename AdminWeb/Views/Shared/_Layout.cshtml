<!DOCTYPE html>
<html>
<head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <link id="virtualpath" href="@Url.Content("~/")"/>
    <div class="navbar custom-navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                 <img width="120" src="~/images/logoMB.png" />
                @*@Html.ActionLink("Admin Web", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav main-menu">
                    <li><a href="/">Home</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Customer <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Content("~/customer")">List</a></li>
                            <li><a href="@Url.Content("~/customer/0")">New</a></li>
                        </ul>
                    </li>
                    <li><a href="/services">Services</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="col-md-12 footer">
        <hr />
        <p>&copy; Martell Bravo & Company - @DateTime.Now.Year </p>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mainapp")
    @*<script src="~/App/mainapp.js"></script>*@
    @RenderSection("scripts", required: false)
</body>
</html>
